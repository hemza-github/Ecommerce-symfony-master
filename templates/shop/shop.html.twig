{% extends 'base.html.twig' %}

{% block title %}
	{{ controller_name }}
{% endblock %}

{% block body %}

	
  
<div class="container mt-5">

  <style>
    .card-body {
      border-bottom-left-radius: inherit !important;
      border-bottom-right-radius: inherit !important;
    }
  </style>
<script>$(function () {
  $('.material-tooltip-main').tooltip({
    template: '<div class="tooltip md-tooltip"><div class="tooltip-arrow md-arrow"></div><div class="tooltip-inner md-inner"></div></div>'
  });
}) </script>
  <!--Section: Content-->
  <section class="dark-grey-text text-center">
    
    <!-- Section heading -->
    <h3 class="font-weight-bold mb-4 pb-2">Our bestsellers</h3>
    <!-- Section description -->
    <p class="grey-text w-responsive mx-auto mb-5">Lorem ipsum dolor sit amet, consectetur adipisicing elit fugit, error amet numquam iure provident voluptate esse quasi nostrum quisquam eum porro a pariatur veniam.</p>

  	<!-- Grid row -->
    <div class="row">
      {% for article in articles %}
         <!-- Grid column -->
      <div class="col-lg-4 col-md-6 mb-4">
        <!-- Card -->
        <div class="card card-cascade wider card-ecommerce">
          <!-- Card image -->
          <div class="view view-cascade overlay">
            <img src="https://mdbootstrap.com/img/Photos/Horizontal/E-commerce/Products/img (56).jpg" class="card-img-top"
              alt="sample photo">
            <a>
              <div class="mask rgba-white-slight"></div>
            </a>
          </div>
          <!-- Card image -->
          <!-- Card content -->
          <div class="card-body card-body-cascade text-center pb-0">
            <!-- Title -->
            <h5 class="card-title">
              <strong>
                <a href="{{
                path(
                  'fiche_produit',
                  {
                    id: article.id
                  }
                )
                }}">{{ article.title }}</a>
              </strong>
            </h5>
            <!-- Description -->
            <p class="card-text">{{ article.introduction }}</p>
            <!-- Card footer -->

            <hr class="my-2"/>
           
              <p class="float-left font-weight-bold mb-1 pb-2">{{ article.price }}$</p>
              
              <a class="float-right material-tooltip-main" href="{{  path( 'fiche_produit', {  id: article.id }) }}" data-toggle="tooltip" 
			  data-placement="top" title="Voir plus">
                <i class="fas fa-eye grey-text ml-3"></i>
              </a>
			  <a class="float-right material-tooltip-main" href="{{ path('cart_add', {'id': article.id }) }}" data-toggle="tooltip"
			   data-placement="top" title="Ajouter au panier">
                <i class="fas fa-cart-plus"></i>
              </a>
            
          </div>

              
            </div>
          </div>
        
      {% endfor %}

          <!-- Card content -->
        </div>
        <!-- Card -->
      </div>
      <!-- Grid column -->

    </div>
    <!-- Grid row -->

  </section>
  <!--Section: Content-->


</div>







  



     
{% endblock %}



